@{
    ViewBag.Title = "Prax OCR Demo";
}
@section Head {
    <link href="@Href("~/Content/CSS/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
    <style type="text/css">
        .Button.Large, button.Large {
            font-size: 18px;
            width: 190px;
            height: 90px;
            display: inline-block;
            -moz-box-sizing: border-box;
            -ms-box-sizing: border-box;
            box-sizing: border-box;
            position: relative;
            vertical-align: top;
        }
        div.Button .ui-button-text {
            /* Hack for vertically centering text in fake <button>s */
            -moz-box-sizing: border-box;
            -ms-box-sizing: border-box;
            box-sizing: border-box;
            height: 90px;
            width: 190px;
            display: table-cell;
            vertical-align: middle;
        }
        #upload {
            position: relative;
        }
        #upload object {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
        #textWizard {
            display: none;
            text-align: left;
            font-size: 12px;
            padding: 0;
            margin: 4px 0 0 0;
            height: 300px;
            width: 500px;
            border-radius: 0;
        }
        #textWizard .step .Instructions {
            -moz-box-sizing: border-box;
            -ms-box-sizing: border-box;
            box-sizing: border-box;
            position: absolute;
            right: 0;
            width: 150px;
            background: #ff8;
            border: solid 1px #dd0;
            padding: 3px;
            top: 0;
            bottom: 0;
            height: auto;
        }
        #textWizard .step .Instructions h2 {
            font-size: 1.1em;
            color: Purple;
            margin: 0 0 .3em 0;
        }
        #sourceText, #translatedText {
            -moz-box-sizing: border-box;
            -ms-box-sizing: border-box;
            box-sizing: border-box;
            resize: none;
            position: absolute;
            width: 346px;
            height: auto;
            padding: 3px;
        }
        #sourceText {
            top: 0;
            height: 148px;
        }
        #translatedText {
            top: 152px;
            bottom: 0;
            background: #eee;
        }
        #translatedText.Loading {
            background: url('/Content/Images/Loading.gif') no-repeat bottom left;
            color: #ddd;
        }
        #translationBranding {
            position: absolute;
            bottom: 0;
            right: 170px;
            padding: 0 6px 6px 0;
            text-align: right;
            font-size: 11px;
            color: #686868;
        }
    </style>
}
@* Firefox doesn't like to put Flash in real <button>s *@
<div id="upload" class="Large Button">
    <input type="file" value="Upload your own image" /></div>
<button id="showTextWizard" class="Large">
    Create an image</button>
<div id="textWizard" title="Create an Image">
    <section class="step" id="translationStep">
        <div class="Instructions ui-corner-all">
            <h2>
                Instructions</h2>
            Enter text in any language to translate it into Arabic for the OCR to recognize.
        </div>
        <textarea id="sourceText" class="ui-wizard-content ui-helper-reset ui-state-default ui-corner-all">Enter a text here to translate</textarea>
        <div id="translatedText" class="ui-wizard-content ui-helper-reset ui-state-default ui-corner-all">
            Translation will appear here</div>
        <div id="translationBranding">translation powered by<img alt=" Google" style="padding-left: 1px;
            vertical-align: middle;" src="https://www.google.com/uds/css/small-logo.png"></div>
    </section>
</div>
@section EndScripts {

    <script type="text/javascript" src="https://www.google.com/jsapi?key=AIzaSyAZqE4ltlMg5yUc-9mSo80UBcr7KW6U6L4"></script>

    <script src="@Href("~/Scripts/jquery-ui-1.8.11.js")" type="text/javascript"></script>

    <script src="@Href("~/Scripts/swfobject.js")" type="text/javascript"></script>

    <script src="@Href("~/Scripts/jquery.uploadify.v2.1.4.js")" type="text/javascript"></script>

    <script src="@Href("~/Scripts/bbq.js")" type="text/javascript"></script>

    <script src="@Href("~/Scripts/jquery.form.wizard.js")" type="text/javascript"></script>

    <script src="@Href("~/Content/Javascript/TextWizard.js")" type="text/javascript"></script>

    <script src="@Href("~/Content/Javascript/DemoPage.js")" type="text/javascript"></script>

}
