<Window x:Class="TextRenderer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Text Renderer" Height="350" Width="525">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="2" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<TextBox Name="textBox" TextChanged="textBox_TextChanged" AcceptsReturn="True" />
		<GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
		<Border  HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" BorderBrush="Black" BorderThickness="0">
			<Image Name="preview" Stretch="None"/></Border>
	</Grid>
</Window>
